<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/preferences_layout"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  >
  <LinearLayout
  	android:id="@+id/preferences_voice_panel"
  	android:orientation="horizontal"
  	android:layout_width="fill_parent"
  	android:layout_height="fill_parent"
  	android:layout_weight="1"
  >
  	<TextView
  		android:id="@+id/preferences_voice_label"
  		android:text="Voice:"
  		android:layout_width="90dp"
  		android:layout_height="wrap_content"
  	/>
	<Spinner
		android:id="@+id/preferences_voice_picker"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
	/>
  </LinearLayout>
  
  <LinearLayout
  	android:id="@+id/preferences_size_panel"
  	android:orientation="horizontal"
  	android:layout_width="fill_parent"
  	android:layout_height="fill_parent"
  	android:layout_weight="1"
  >
  	<TextView
  		android:id="@+id/preferences_size_label"
  		android:text="Size:"
  		android:layout_width="90dp"
  		android:layout_height="wrap_content"
  	/>
	<Spinner
		android:id="@+id/preferences_size_picker"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
	/>
  </LinearLayout>
  	
  	<LinearLayout
  		android:layout_width="fill_parent"
	  	android:layout_height="fill_parent"
  		android:layout_weight="1"
  		android:id="@+id/preferences_button_panel"
  		android:orientation="horizontal"
  	>
  		<Button
  			android:id="@+id/preferences_cancel_button"
  			android:text="Cancel"
  			android:layout_weight="1"
  			android:layout_width="fill_parent"
  			android:layout_height="wrap_content"
  		/>
  		<Button
  			android:id="@+id/preferences_save_button"
  			android:text="Save"
  			android:layout_weight="1"
  			android:layout_width="fill_parent"
  			android:layout_height="wrap_content"
  		/>
  	</LinearLayout>

</LinearLayout>
