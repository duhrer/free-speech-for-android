<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/file_picker"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:padding="20dp"
  android:orientation="vertical">
  
  <TextView 
  	android:id="@+id/file_picker_title"
  	android:text="Choose a File"
  	android:textSize="30sp"
  	android:layout_width="fill_parent"
  	android:layout_height="wrap_content"
  />
  
  <com.blogspot.tonyatkins.myvoice.view.FilePickerScrollView
  	android:id="@+id/file_picker_scroll"
  	android:fillViewport="true"
  	android:layout_width="fill_parent"
  	android:layout_height="wrap_content"
  	/>
  
  <Button
  	android:text="Cancel"
  	android:id="@+id/file_picker_cancel"
  	android:layout_width="fill_parent"
  	android:layout_height="wrap_content"
   />
</LinearLayout>
