<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/file_picker"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:padding="20dp"
  android:orientation="vertical">
  
  <TextView 
  	android:id="@+id/file_picker_title"
  	android:text="Choose a File"
  	android:textSize="30sp"
  	android:layout_width="fill_parent"
  	android:layout_height="wrap_content"
  />
  
  <LinearLayout android:id="@+id/file_picker_cwd_panel"
  	android:orientation="horizontal"
  	android:layout_width="fill_parent"
  	android:layout_height="wrap_content"
  >
  	<TextView android:id='@+id/file_picker_cwd_title'
  		android:layout_height="wrap_content"
  		android:layout_width="fill_parent"
  		android:layout_weight="1"
  		android:textSize="20sp"
  		android:gravity="center"
  		android:text="Current directory:"
	/>
	<TextView android:id="@+id/file_picker_cwd" 
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
  		android:layout_weight="2"
  		android:gravity="center"
  		android:textSize="15sp"
  		android:text="/dev/null"
	/>
  </LinearLayout>

  <GridView android:id="@+id/file_picker_grid"
  	android:layout_width="fill_parent"
  	android:layout_height="wrap_content"
  	android:numColumns="4"
  	android:padding="10dp"
  	>
  </GridView>
  
  <Button
  	android:text="Cancel"
  	android:id="@+id/file_picker_cancel"
  	android:layout_width="fill_parent"
  	android:layout_height="wrap_content"
   />
</LinearLayout>
